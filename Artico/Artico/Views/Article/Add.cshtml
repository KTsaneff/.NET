@model CreateArticleViewModel

@{
    ViewBag.Title = "Add Article";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label">Title</label>
                <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Author" class="form-label">Author</label>
                <input asp-for="@Model.Author" class="form-control" aria-required="true" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Body" class="form-label">Body</label>
                <textarea asp-for="@Model.Body" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.JobId" class="form-label">Target job</label>
                <select asp-for="@Model.JobId" class="form-control">
                    @foreach (var job in Model.Jobs)
                    {
                        <option value="@job.Id">@job.Name</option>
                    }
                </select>
                <span asp-validation-for="JobId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.PositionId" class="form-label">Target position</label>
                <select asp-for="@Model.PositionId" class="form-control">
                    @foreach (var position in Model.Positions)
                    {
                        <option value="@position.Id">@position.Name</option>
                    }
                </select>
                <span asp-validation-for="PositionId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
